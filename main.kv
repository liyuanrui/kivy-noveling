
#指定中文字体

<Label>:
    font_name:'droid.ttf'
<Dutton@Button>:
    font_name:'droid.ttf'
    bold:True
<TextInput>:
    font_name:'droid.ttf'


#这里对应py文件MyLayout类
<MyLayout>:
    #绑定id，property事件
    novelname:novelname
    noveldir:noveldir
    novelshow:novelshow
    noveldown:noveldown
    #上下布局
    orientation:'vertical'
    #内部间隔
    padding:(36,36)
    #页面背景
    canvas.before:
        Rectangle:
            pos:self.pos
            size:self.size
            source:'11.jpg'
    Label:
        text:'小说名称:'
        #字体左对齐
        text_size:(self.width,None)
        halign:'left'
        valign:'top'
        #自定义高度
        size_hint_y:None
        height:'48dp'
        
            
    TextInput:
        id:novelname
        text:''
        size_hint_y:None
        height:'48dp'
        #输入框图片
        background_normal:'3.png'
        #垂直居中
        padding:(10,0.5*(self.height-self.line_height))

        
        
        
    Label:
        size_hint_y:None
        height:'4dp'
        
    Label:
        text:'保存路径:'
        text_size:(self.width,None)
        halign:'left'
        valign:'top'
        size_hint_y:None
        height:'48dp'
         
    TextInput:
        id:noveldir
        text:'/sdcard/小说'
        size_hint_y:None
        height:'48dp'
        background_normal:'3.png'
        padding:(10,0.5*(self.height-self.line_height))
        
    Label:
        size_hint_y:None
        height:'20dp'
    
    BoxLayout:
        #左右布局
        orientation:'horizontal'
        size_hint_y:None
        height:'81dp'
        Dutton:
            text: '查询'
            #按钮正常背景
            background_normal:'3.png'
            #按钮点击背景
            background_down:'2.png'
            #按钮松开时间
            on_release:root.checknovel()
        Dutton:
            id:noveldown
            text: '下载'
            background_normal:'3.png'
            background_down:'2.png'
            on_release:root.start()
        Dutton:
            id:zt
            text: '主题'
            background_normal:'3.png'
            background_down:'2.png'
    
    Label:
        size_hint_y:None
        height:'20dp'
    
    #滚动模式
    ScrollView:
        Label:
            id:novelshow
            text: ''
            text_size:(self.width,None)
            halign:'left'
            valign:'top'
            size_hint_y:None
            height:self.texture_size[1]
    Label:
        size_hint_y:None
        height:'20dp'
        
        
        
    
